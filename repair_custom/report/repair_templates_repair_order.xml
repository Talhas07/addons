<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_repair_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span>Repair Order: </span>
                            <span t-field="doc.name"/>
                        </h2>

                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Customer:</strong>
                                <div t-if="doc.partner_id">
                                    <span t-field="doc.partner_id.name"/>
                                    <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone", "email"]}'/>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row">
                                    <div class="col-6"><strong>Date:</strong></div>
                                    <div class="col-6"><span t-field="doc.schedule_date"/></div>
                                </div>
                                <div class="row">
                                    <div class="col-6"><strong>Status:</strong></div>
                                    <div class="col-6"><span t-field="doc.state"/></div>
                                </div>
                                <div class="row" t-if="doc.guarantee_limit">
                                    <div class="col-6"><strong>Warranty Expiration:</strong></div>
                                    <div class="col-6"><span t-field="doc.guarantee_limit"/></div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt16">
                            <div class="col-12">
                                <strong>Product to Repair:</strong>
                                <span t-field="doc.product_id.display_name"/>
                                <span t-if="doc.lot_id"> (Lot/Serial: <span t-field="doc.lot_id.name"/>)</span>
                            </div>
                        </div>

                        <div t-if="doc.description" class="row mt16">
                            <div class="col-12">
                                <strong>Description:</strong>
                                <span t-field="doc.description"/>
                            </div>
                        </div>

                        <!-- Parts -->
                        <t t-if="doc.operations">
                            <h3 class="mt32">Parts</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.operations" t-as="line">
                                        <tr>
                                            <td><span t-field="line.type"/></td>
                                            <td><span t-field="line.product_id.display_name"/></td>
                                            <td><span t-field="line.name"/></td>
                                            <td class="text-end">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom.name"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>

                        <!-- Fees/Operations -->
                        <t t-if="doc.fees_lines">
                            <h3 class="mt32">Operations (Services)</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Description</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.fees_lines" t-as="fee">
                                        <tr>
                                            <td><span t-field="fee.product_id.display_name"/></td>
                                            <td><span t-field="fee.name"/></td>
                                            <td class="text-end">
                                                <span t-field="fee.product_uom_qty"/>
                                                <span t-field="fee.product_uom.name"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="fee.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="fee.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>

                        <!-- Totals -->
                        <div class="row justify-content-end mt32">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Untaxed Amount:</strong></td>
                                        <td class="text-end">
                                            <span t-field="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Taxes:</strong></td>
                                        <td class="text-end">
                                            <span t-field="doc.amount_tax" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-top">
                                        <td><strong>Total:</strong></td>
                                        <td class="text-end">
                                            <strong>
                                                <span t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Notes -->
                        <t t-if="doc.quotation_notes">
                            <div class="mt32">
                                <strong>Notes:</strong>
                                <p t-field="doc.quotation_notes"/>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
