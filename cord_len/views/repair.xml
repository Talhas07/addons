<odoo>
  <data>

    <record id="view_repair_order_form_filter_cordlen20230428" model="ir.ui.view">
      <field name="name">repair.select.cordlen20230428</field>
      <field name="model">repair.order</field>
      <field name="inherit_id" ref="repair.view_repair_order_form_filter" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="replace">
          <field name="name" string="Repair Order" filter_domain="['|', '|', ('name', 'ilike', self), ('product_id', 'ilike', self), ('product_bar_code','ilike', self)]" />
          <field name="product_bar_code" string="Barcode" filter_domain="[('product_bar_code','ilike', self)]" />
          <field name="supplier_id" string="Supplier" filter_domain="[('supplier_id','ilike', self)]" />
          <field name="customer_reference" string="Customer Reference" filter_domain="[('customer_reference','ilike', self)]" />
        </xpath>
      </field>
    </record>

    <record id="view_repair_order_form" model="ir.ui.view">
      <field name="name">repair.form</field>
      <field name="model">repair.order</field>
      <field name="inherit_id" ref="repair.view_repair_order_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='product_id']" position="after">
          <field name="product_bar_code" string="Product Barcode" />
          <field name="customer_reference" />
          <field name="supplier_id" />
          <field name="invoiced" invisible="1" />     
          <field name="diagnostic_invoice_id" invisible="1" />  
        </xpath>
        <xpath expr="//header" position="inside">
          <button name="create_dignostic_invoice" states="draft,confirmed,ready,under_repair,2binvoiced" type="object" string="Create Diagnostic Invoice" class="oe_highlight" attrs="{'invisible': [('diagnostic_invoice_id', '=', True)]}" />
          <button name="action_repair_invoice_create_2" states="done" type="object" string="Create Repair Invoice" class="oe_highlight" attrs="{'invisible': [('invoiced', '=', True)]}" />
        </xpath>
      </field>
    </record>

    <record id="view_repair_kanban" model="ir.ui.view">
      <field name="name">repair.kanban</field>
      <field name="model">repair.order</field>
      <field name="inherit_id" ref="repair.view_repair_kanban" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='product_id']" position="after">
          <field name="product_bar_code" string="Product Barcode" />
        </xpath>
      </field>
    </record>

  </data>
</odoo>