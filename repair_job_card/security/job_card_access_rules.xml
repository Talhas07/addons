<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- All internal users: Can only see Job Cards assigned to them -->
        <record id="job_card_user_rule" model="ir.rule">
            <field name="name">User: View Own Job Cards Only</field>
            <field name="model_id" ref="model_job_card"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force">[('technician_id', '=', user.id)]</field>
        </record>

        <!-- Managers: Full Access to all Job Cards (overrides the user rule) -->
        <record id="job_card_manager_rule" model="ir.rule">
            <field name="name">Manager: Full Access</field>
            <field name="model_id" ref="model_job_card"/>
            <field name="groups" eval="[(4, ref('repair_job_card.group_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

    </data>
</odoo>
