<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <!-- Module Category for Repair Job Cards -->
        <record id="module_category_repair_job_card" model="ir.module.category">
            <field name="name">Repair Job Cards</field>
            <field name="sequence">20</field>
        </record>

        <!-- Manager Group: Can see ALL job cards (overrides per-user restriction) -->
        <record id="group_manager" model="res.groups">
            <field name="name">Job Card Manager</field>
            <field name="category_id" ref="module_category_repair_job_card"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view and manage all job cards, regardless of assigned technician.</field>
        </record>

    </data>
</odoo>
