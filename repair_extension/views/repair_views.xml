<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend Repair Order Form View -->
        <record id="view_repair_order_form_inherit" model="ir.ui.view">
            <field name="name">repair.order.form.inherit.extension</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Add Internal References group at the top of sheet -->
                <xpath expr="//sheet" position="inside">
                    <group string="Internal References" name="internal_references">
                        <group>
                            <field name="job_card_id" placeholder="Enter job card ID..."/>
                            <field name="customer_reference" placeholder="Customer's reference..."/>
                        </group>
                        <group>
                            <field name="assigned_technician_id" options="{'no_create': True}"/>
                            <field name="product_bar_code"/>
                        </group>
                    </group>
                </xpath>
                
                <!-- Add Description -->
                <xpath expr="//sheet" position="inside">
                    <group string="Description" name="description_group">
                        <field name="description" nolabel="1" placeholder="Describe the repair work to be done..."/>
                    </group>
                </xpath>
                
                <!-- Add Appliance Details group -->
                <xpath expr="//sheet" position="inside">
                    <group string="Appliance Details" name="appliance_details">
                        <group>
                            <field name="appliance_serial_number" placeholder="Enter serial number..."/>
                            <field name="appliance_brand"/>
                            <field name="appliance_model"/>
                            <field name="condition_on_receipt"/>
                        </group>
                        <group>
                            <field name="supplier_id" options="{'no_create': False}"/>
                            <field name="supplier_invoice_ref"/>
                            <field name="purchase_date"/>
                            <field name="warranty_status"/>
                        </group>
                    </group>
                </xpath>
                
                <!-- Add Diagnostic Report smart button to button_box if it exists -->
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_generate_diagnostic_report"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-stethoscope">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Diagnostic</span>
                            <span class="o_stat_text">Report</span>
                        </div>
                    </button>
                </xpath>
                
                <!-- Add Print Diagnostic Report button to header -->
                <xpath expr="//header" position="inside">
                    <button name="action_print_diagnostic_report" 
                            string="Print Diagnostic Report" 
                            type="object"/>
                </xpath>
                
                <!-- Add Amounts Section -->
                <xpath expr="//sheet" position="inside">
                    <group class="oe_subtotal_footer oe_right" name="amounts_section">
                        <field name="currency_id" invisible="1"/>
                        <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="amount_total"/>
                        </div>
                        <field name="amount_total" nolabel="1" widget="monetary" class="oe_subtotal_footer_separator" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </xpath>
                
                <!-- Add Diagnosis tab in notebook -->
                <xpath expr="//notebook" position="inside">
                    <page string="Diagnosis" name="diagnosis">
                        <group>
                            <group string="Fault Information">
                                <field name="fault_description" placeholder="Describe the fault reported by the customer..."/>
                            </group>
                            <group string="Accessories Received">
                                <field name="accessories_received" placeholder="List accessories received with the appliance..."/>
                            </group>
                        </group>
                        <group>
                            <group string="Technical Diagnosis">
                                <field name="diagnosis_notes" placeholder="Enter technical diagnosis details..."/>
                                <field name="root_cause"/>
                            </group>
                            <group string="Recommendations">
                                <field name="repair_recommendations" placeholder="Enter repair recommendations..."/>
                            </group>
                        </group>
                        <group>
                            <group string="Diagnosis Details">
                                <field name="diagnosis_date"/>
                                <field name="diagnosed_by"/>
                                <button name="action_set_diagnosis_date" 
                                        string="Set Diagnosis Now" 
                                        type="object" 
                                        class="btn-secondary"
                                        icon="fa-clock-o"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                
            </field>
        </record>
        
        <!-- Extend Repair Order Tree View -->
        <record id="view_repair_order_tree_inherit" model="ir.ui.view">
            <field name="name">repair.order.tree.inherit.extension</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_tree"/>
            <field name="arch" type="xml">
                
                <!-- Add Job Card ID after name -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="job_card_id" optional="show"/>
                    <field name="customer_reference" optional="hide"/>
                </xpath>
                
                <!-- Add Appliance Serial Number and Barcode after product_id -->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="appliance_serial_number" optional="show"/>
                    <field name="product_bar_code" optional="hide"/>
                    <field name="description" optional="hide"/>
                </xpath>
                
                <!-- Add Supplier and Technician after partner_id -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="supplier_id" optional="hide"/>
                    <field name="assigned_technician_id" optional="show"/>
                </xpath>
                
            </field>
        </record>
        
        <!-- Extend Repair Order Search View -->
        <record id="view_repair_order_form_filter_inherit" model="ir.ui.view">
            <field name="name">repair.order.search.inherit.extension</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form_filter"/>
            <field name="arch" type="xml">
                
                <!-- Add search fields after the first field -->
                <xpath expr="//field[1]" position="after">
                    <field name="job_card_id" string="Job Card ID"/>
                    <field name="customer_reference" string="Customer Reference"/>
                    <field name="appliance_serial_number" string="Serial Number"/>
                    <field name="product_bar_code" string="Barcode"/>
                    <field name="supplier_id" string="Supplier"/>
                    <field name="assigned_technician_id" string="Technician"/>
                </xpath>
                
                <!-- Add filter for diagnosis -->
                <xpath expr="//filter[1]" position="before">
                    <filter string="Has Diagnosis" name="has_diagnosis" 
                            domain="[('diagnosis_date', '!=', False)]"/>
                    <filter string="My Repairs" name="my_repairs" 
                            domain="[('assigned_technician_id', '=', uid)]"/>
                    <separator/>
                </xpath>
                
            </field>
        </record>
        
        <!-- Extend Kanban View if it exists -->
        <record id="view_repair_kanban_inherit" model="ir.ui.view">
            <field name="name">repair.order.kanban.inherit.extension</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_kanban"/>
            <field name="arch" type="xml">
                
                <xpath expr="//templates" position="before">
                    <field name="job_card_id"/>
                    <field name="customer_reference"/>
                    <field name="appliance_serial_number"/>
                    <field name="warranty_status"/>
                    <field name="assigned_technician_id"/>
                </xpath>
                
            </field>
        </record>
        
    </data>
</odoo>
